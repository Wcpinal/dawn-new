  <section class="category_part">
      {% if section.settings.side_img != blank %}
        <img src="{{ section.settings.side_img | img_url:"original" }}" alt="" >
      {% endif %}
        <div class="container">
            <div class="head">
           
                <h2>
              {{ section.settings.heading }}
                </h2>
              
               {{ section.settings.p_dis }}
              
            </div>

            <div class="cat_main">
                <div class="swiper cat_slider">
                    <div class="swiper-wrapper">

                      {% for block in section.blocks %}
                        <div class="swiper-slide col6 col-s-12 col">
                        
                                    <div class="cat_part">
                                <figure>
                                    <a href="{{ block.settings.collection.url }}">
                        
                                      {% if block.settings.coll_img != blank %}
                                       <img src="{{ block.settings.coll_img | img_url:"original" }}" alt="">
                                      
                                      {% else %}
                                        
                                        {% if block.settings.collection.featured_image != blank %}
                                          
                                           <img src="{{ block.settings.collection.featured_image | img_url:"original" }}" alt="">
                                        {% elsif block.settings.collection.products.first != blank %}
                                     
                                          <img src="{{ block.settings.collection.products.first | img_url:"original" }}" alt="">
                                        {% else %}
                                         {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg'  }}
                                          
                                          {% endif %}
                                        
                                      {% endif %}
                                    </a>
                                </figure>
                                <div class="cat_details">
                                    <h4>
                                        <a href="{{ block.settings.collection.url }}">
                                          {{ block.settings.collection.title }}
                                        </a>
                                    </h4>
                                    <p>  {{ block.settings.collection.description }} </p>
                                    <a href="{{ block.settings.collection.url }}" class="btn">
                                        View Products
                                    </a>
                                </div>
                              
                            </div>
                          
                        </div>
                      {% endfor %}
                      
                    </div>

                    <div class="cat-prev slider-arrow" tabindex="0" role="button" aria-label="Next slide"
                        aria-controls="swiper-wrapper-abed8191101094f100" aria-disabled="false">

                        <svg width="15" height="27" viewBox="0 0 15 27" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M13 25L2.68667 13.5L13 2" stroke="#5A5A5A" stroke-width="3" />
                        </svg>

                    </div>
                    <div class="cat-next  slider-arrow" tabindex="0" role="button" aria-label="Next slide"
                        aria-controls="swiper-wrapper-abed8191101094f100" aria-disabled="false">

                        <svg width="15" height="27" viewBox="0 0 15 27" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M2 25L12.3133 13.5L2 2" stroke="#5A5A5A" stroke-width="3" />
                        </svg>

                    </div>

                </div>
            </div>
        </div>
    </section>

{% schema %}
  {
    "name": "f-collection",
    "settings": [
      {
      "type": "image_picker",
      "id": "side_img",
      "label": "Service type image"
      },
       {
        "type": "text",
        "id": "heading",
        "label": "Title",
        "default":" Featured Collections."
        },
       {
      "type": "richtext",
      "id": "p_dis",
      "label": "Section heading "
      } 
    ]
    ,
    "blocks": [
        {
        "type": "slide",
        "name": "Slide",
        "limit": 6,
        "settings": [
             {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
            },
           {
            "type": "image_picker",
            "id": "coll_img",
            "label": "Service type image"
            }
            ]
            }
          ]
 ,
  "presets": [
    {
      "name": "f-collection",
      "category": "ADVANCED LAYOUT"
    }
  ]
  }
{% endschema %}

