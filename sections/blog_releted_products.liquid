<div class="releted_products">
<ul>
 <li>   
   {% assign handle = article.handle %}
   {{ handle }}
   <br>
   {%  assign newhandle = handle | remove:"news/" %} 
      {{ newhandle }}
      
     {% for productrel in collections['all'].products  %}
         <div>
            {% if productrel.tags contains newhandle %}

             {% assign tp_handle = product.handle %} 
             {% assign rhandle = productrel.handle %}
              {% unless tp_handle == rhandle %}
              
               {% render 'best-seller-product',
                 best-seller:productrel%}
              
              {% endunless %}
            {% endif %}
            
          </div>
       	{% endfor %}	

  </li>  
</ul>
</div>

